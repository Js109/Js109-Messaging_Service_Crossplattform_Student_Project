<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".welcome.IntroFragmentChannelInformation">

    <TextView
        android:id="@+id/fragm_welc2_textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/welcome_intro_channel_info_titel"
        android:textColor="@color/white"
        android:textSize="@dimen/heading" />

    <TextView
        android:id="@+id/fragm_welc2_textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="150dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/welcome_intro_channel_info_subtitel"
        android:textColor="@color/white"
        android:textSize="@dimen/subheading" />

</LinearLayout>